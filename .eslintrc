{
  "extends": ["airbnb-base", "react-app"],
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "impliedStrict": true,
      "classes": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "linkComponents": [
      "Hyperlink",
      {
        "name": "Link",
        "linkAttribute": "to"
      }
    ]
  },
  "rules": {
    "key-spacing": 0,
    "no-unused-vars": [
      1,
      {
        "argsIgnorePattern": "res|state|next|^err|cred"
      }
    ],
    "arrow-body-style": [2, "as-needed"],
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "arrow-parens": [
      1,
      "as-needed",
      {
        "requireForBlockBody": false
      }
    ],
    "no-console": 0,
    "import": 0,
    "func-names": 0,
    "space-before-function-paren": 0,
    "comma-dangle": 0,
    "max-len": 0,
    "no-underscore-dangle": 0,
    "consistent-return": 0,
    "radix": 0,
    "no-shadow": [
      2,
      {
        "hoist": "all",
        "allow": ["resolve", "reject", "done", "next", "err", "error", "cred"]
      }
    ],
    "quotes": [
      1,
      "single",
      {
        "avoidEscape": false,
        "allowTemplateLiterals": true
      }
    ],
    "no-debugger": 0,
    "no-alert": 0,
    "jsx-a11y/href-no-hash": "off",
    "react-app/jsx-a11y/href-no-hash": "off",
    "import/no-unresolved": 0,
    "import/extensions": "off",
    "react-app/import/no-unresolved": 0,
    "react-app/import/extensions": "off",
    "react-app/import/prefer-default-export": 0,
    "react-app/react/display-name": 1,
    "react-app/react/no-array-index-key": 0,
    "react-app/react/react-in-jsx-scope": 0,
    "react-app/react/prefer-stateless-function": 0,
    "react-app/react/forbid-prop-types": 0,
    "react-app/react/no-unescaped-entities": 0,
    "react-app/react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react-app/react/self-closing-comp": [
      1,
      {
        "component": true,
        "html": false
      }
    ],
    "class-methods-use-this": [
      1,
      {
        "exceptMethods": [
          "render",
          "getInitialState",
          "getDefaultProps",
          "getChildContext",
          "componentWillMount",
          "componentDidMount",
          "componentWillReceiveProps",
          "shouldComponentUpdate",
          "componentWillUpdate",
          "componentDidUpdate",
          "componentWillUnmount"
        ]
      }
    ]
  },
  "plugins": ["react-app", "jest"]
}
